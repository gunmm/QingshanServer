<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="dialect">org.hibernate.dialect.MySQLDialect</property>
		<property name="connection.url">jdbc:mysql:///qingshangroup?useUnicode=true&amp;characterEncoding=UTF-8</property>
		<property name="connection.username">root</property>
		<property name="connection.password">root</property>
		<property name="connection.driver_class">com.mysql.jdbc.Driver</property>


		<!-- 显示sql语句 格式化 -->
		<property name="show_sql">true</property>
		<property name="format_sql">true</property>

		<!-- 新建表 还是 更新表 -->
		<property name="hbm2ddl.auto">none</property>
		
		<property name="hibernate.current_session_context_class">thread</property>
		
		<mapping resource="com/gunmm/model/MessageModel.hbm.xml" />
		<mapping resource="com/gunmm/model/Order.hbm.xml" />
		<mapping resource="com/gunmm/model/Flow.hbm.xml" />
		<mapping resource="com/gunmm/model/Invoice.hbm.xml" />
		<mapping resource="com/gunmm/model/User.hbm.xml" />
		<mapping resource="com/gunmm/model/DictionaryModel.hbm.xml" />
	    
	    <mapping resource="com/gunmm/model/Site.hbm.xml" />
	    <mapping resource="com/gunmm/model/Complain.hbm.xml" />
	    <mapping resource="com/gunmm/model/Vehicle.hbm.xml" />
	    <mapping resource="com/gunmm/model/City.hbm.xml" />
	    
	    
	    
				
		<mapping resource="com/gunmm/responseModel/OrderListModel.hbm.xml" />
		<mapping resource="com/gunmm/responseModel/SiteListModel.hbm.xml" />
		<mapping resource="com/gunmm/responseModel/DriverListModel.hbm.xml" />
		<mapping resource="com/gunmm/responseModel/MasterListModel.hbm.xml" />
		<mapping resource="com/gunmm/responseModel/ManageListModel.hbm.xml" /> 
		<mapping resource="com/gunmm/responseModel/VehicleListModel.hbm.xml" /> 
		<mapping resource="com/gunmm/responseModel/NearbyDriverListModel.hbm.xml" />
		
		
    </session-factory>
</hibernate-configuration>
